
<head>
  <style>
  table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
  }

  th, td {
    padding: 15px;
  }
  </style>
</head>


<body>
  <center> <h1>Daily_report</h1>

    <table>
      <tr>
        <th>Date</th>
        <th>Count</th>
      </tr>

      <% #@dailyreport.each do |dailyreport| %>
      <tr>
        <td><%= @dailyreport.date_today %></td>
        <td><%= @dailyreport.count %></td>
      </tr>
      <% #end %>
    </table> 
    </br> </br> </br> </br>
    <%= link_to 'back' , root_path %>
  </center>

</body>